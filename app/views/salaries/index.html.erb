<div class="col-4" style="margin : 0 auto; padding: 10px">
  <h1>Employee salaries data</h1></br>
</div>
<table class="table table-striped">
  <thead class="thead-light">
    <tr>
      <td>ID</td>
      <td>Employee ID</td>
      <td>Date</td>
      <td>Total salary</td>
      
    </tr>
  </thead>
  <tbody>
    <% @salaries.each do |salary| %>
      <tr>
        <td><%= salary.id%></td>
        <td><%= salary.employee_id %></td>
        <td><%= salary.date%></td> 
        <td><%= salary.total_salary%></td>
        <td><%= link_to 'show', salary_path(salary)%>
      </tr>
   <% end %>
  </tbody>
</table>
<div class="col-2" style="margin : 0 auto; padding: 10px">
<%= link_to 'Add new', new_salary_path, class: "btn btn-success" %>
 </div>
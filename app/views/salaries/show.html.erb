<div class="col-6" style="margin : 0 auto;">
  <h2><%= @salary.id %>'s details</h2>
  <h4>employee Name: <%= Employee.find(@salary.employee_id).first_name %></h4>
  <h4>ID: <%= @salary.id %></h4>
  <h4>month: <%= @salary.date %></h4>
  <h4>working_days: <%= @salary.total_salary %></h4>
  
 
  </br></br>
  <div class="d-flex justify-content-center">  
    <div class="col-2">
      <%= link_to "Edit", edit_salary_path(@salary), class: "btn btn-warning"%> 
    </div>
    <div class="col-3">
      <%= button_to "Destroy", salary_path(@salary), class: "btn btn-danger", data: {:confirm => 'Are you sure?'}, method: :delete %>
    </div>
  </div> 